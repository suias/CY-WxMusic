/* pages/search-detail/search-detail.wxss */
page{
  padding:0 20rpx; 
  box-sizing: border-box;
  --search-padding: 10px 0;
}
.search{
  font-size: large;
  font-weight: bolder;
  height: 30px;
}
.main{
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  padding: 2px;
}

.listbox{
  height: 80px;
  border:solid 1px rgba(0,0,0,0.15);
  border-radius: 20rpx;
  margin-bottom: 5px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: left;
  overflow: hidden;
}

.musicimg{
  border-radius: 20rpx;
  margin-inline: 2px;
  width:150rpx;
  height: 150rpx;
  left: 0;
  top: 0;
  z-index: -1;
}

.playimg{
  height: 100rpx;
  width: 100rpx;
}

.music{
  width: 160px;
  overflow: hidden;
  white-space: nowrap;
}